@import '../../assets/css/variables.styl'

header

    $animation-type = cubic-bezier(.25,.8,.55, .9)

    display flex
    justify-content space-between
    align-items flex-start
    position relative
    box-sizing border-box
    padding 0 16px
    width 100%
    height 35px
    background-color #b4d0c9

    z-index 99

    transition height .3s $animation-type
    

    h1.logo
      flex-grow 2
      margin 0
      margin-top 9px      
      font-family Helvetica, sans-serif
      font-size 16px
      font-weight 200
      user-select none

      ins
        margin-left 5px
        font-size .7em

    .panel
      display flex
      justify-content flex-end
      flex-grow 0
      position relative
      min-width 130px
      margin-top 9px
      user-select none

      button:not(:last-child)
        margin-right 7px
      

    .info
      flex-grow .1
      height 100%
      opacity 0
      transition .1s $animation-type

      font-family 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
      font-size 12px

      .info__list
        display flex
        position relative
        flex-direction column
        justify-content center
        width max-content
        
        list-style-position inside
        padding 0 16px
        margin 0
        height 100%

        background-color rgba(255,255,255, .2)

&.open
  height 125px
  //background-color rgba(rgb(5, 97, 76), 1)
  transition all .3s $animation-type  

  .info
    opacity 1
    transition opacity .5s $animation-type .2s
    
      
